# Backend Testing Environment Variables
# Copy this file to .env and update with your actual values

# API Configuration
API_BASE_URL=http://localhost:3000/api
BASE_URL=http://localhost:3000

# Test Database (if using database testing)
TEST_DB_URL=mongodb://localhost:27017/test_db
# or for PostgreSQL:
# TEST_DB_URL=postgresql://username:password@localhost:5432/test_db

# Authentication (if testing auth endpoints)
JWT_SECRET=your-test-jwt-secret-here
API_KEY=your-test-api-key-here

# External Services (if testing integrations)
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_KEY=your-external-api-key

# Test Configuration
TEST_TIMEOUT=30000
SLOW_TEST_THRESHOLD=5000

# Debug settings
DEBUG=false
VERBOSE_LOGGING=false
